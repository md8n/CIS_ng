<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CIS</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicons/apple-touch-icon.png?v=YAAJjG3jeo"/>
    <link rel="icon" type="image/png" href="~/favicons/favicon-32x32.png?v=YAAJjG3jeo" sizes="32x32"/>
    <link rel="icon" type="image/png" href="~/favicons/android-chrome-192x192.png?v=YAAJjG3jeo" sizes="192x192"/>
    <link rel="icon" type="image/png" href="~/favicons/favicon-16x16.png?v=YAAJjG3jeo" sizes="16x16"/>
    <link rel="manifest" href="~/favicons/manifest.json?v=YAAJjG3jeo"/>
    <link rel="mask-icon" href="~/favicons/safari-pinned-tab.svg?v=YAAJjG3jeo" color="#5bbad5"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicons/favicon.ico?v=YAAJjG3jeo"/>
    <meta name="msapplication-TileColor" content="#da532c"/>
    <meta name="msapplication-TileImage" content="~/favicons/mstile-144x144.png?v=YAAJjG3jeo"/>
    <meta name="theme-color" content="#ffffff"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          @Html.ActionLink("CIS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
            <!--<li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>-->
          </ul>
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </div>
    <div class="container body-content">
      @RenderBody()
      @RenderSection("SPAViews", false)
      <hr />
      <footer>
        <p>&copy; @DateTime.Now.Year - Critical Infrastructural Services Ltd.</p>
      </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", false)
  </body>
</html>
